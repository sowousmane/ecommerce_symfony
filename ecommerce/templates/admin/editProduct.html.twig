         <form method="POST">
            <input type="text" value="{{ product.name }}" class="form-control" name="name" required>
            <input type="text" value="{{ product.description }}" class="form-control" name="description" required>
            <input type="number" value="{{ product.price }}" class="form-control" name="price" required>
            <input type="number" value="{{ product.stock }}" class="form-control" name="stock" required>
            <input type="text" value="{{ product.image }}" class="form-control" name="image" required>
            <select class="form-control" name="category" value="2" required>
                <option value="{{ product.category.id }}">{{ product.category.name }}</option>
                {% for category in categories %}
                    {% if category.id != product.category.id %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
            <button style="margin: 10px;" type="submit" class="btn btn-primary">Enr√©gistrer</button>
        </form>
    </div>
   
       
