                                <img src="{{ asset("images/products/" ~ product.image ~ ".PNG") }}" alt="Avatar" style="width:100%" />
                                <div class="foot_article">
                                    <h2>Asperges blanches ou violettes</h2>
                                    <h5>la botte de 500g</h5>
                                    <h5>5€ /kilogramme</h5>
                                    <h3>{{ product.name }}</h2>
                                        <h2> {{ product.price }} €</h2>
                                </div>
                            </a>

                            <div class="btn-add  text-center">
                                <button type="submit" class="btn ">
                                    <span class="fa fa-plus"></span>
                                    <strong>ajouter</strong>
                                </button>
                                

                            </div>
                        </div>
                    </li>
                </div>
            {% endfor %}
        </ul>
    </div>


</div>
{% endblock %}